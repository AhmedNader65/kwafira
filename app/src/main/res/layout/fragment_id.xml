<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.almusand.kawfira.kwafira.identity.idFragment.IdViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:text="الهوية"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:text="يرجى إدخال صورة ورقم الهوية الخاصة بكي"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_marginRight="16dp"
            android:id="@+id/addPic"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/black_stroke_rounded"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:paddingRight="40dp"
                android:layout_gravity="center"
                android:paddingBottom="20dp"
                android:src="@drawable/ic_cameraicon" />

            <TextView
                android:id="@+id/imgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/rounded_solid_light_prim"
                android:text="إضافة صورة"
                android:layout_gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>
        <EditText
            android:id="@+id/idET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="@font/cairo"
            android:background="@color/browser_actions_bg_grey"
            android:layout_margin="16dp"
            android:hint="رقم الهوية"/>
        <Button
            android:id="@+id/button"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/cairo"
            android:text="تأكيد"
            android:textColor="#FFF"/>
    </LinearLayout>
</layout>