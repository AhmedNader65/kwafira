<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ui.editingActivities.lang.ChangeLanguageActivity">

    <TextView
        android:id="@+id/text_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="تغيير اللغة"
        android:fontFamily="@font/cairo"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        app:layout_constraintTop_toBottomOf="@id/text_send"
        android:layout_marginTop="64dp"
        android:id="@+id/radioLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/ar"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:button="@drawable/language_radio"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#4C4C4C"
            android:text="العربية"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="#7E7C7C"/>
        <RadioButton
            android:id="@+id/en"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:button="@drawable/language_radio"
            android:textColor="#4C4C4C"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="English"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="#7E7C7C"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>