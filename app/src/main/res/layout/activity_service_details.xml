<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.almusand.kawfira.ui.serviceDetails.ServiceDetailsViewModel" />
    </data>
    <RelativeLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/sliderImg"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/cairo"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/initprice"
            android:layout_margin="10dp"

            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/cairo"
            android:textColor="@color/black"
            android:gravity="right"

            android:textSize="22sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Desc"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/cairo"
            android:textColor="@color/black"
            android:gravity="right"
            android:textSize="18sp"/>
    </LinearLayout>
        <Button
            android:layout_above="@+id/cart"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/rounded_solid_prim"
            android:fontFamily="@font/cairo"
            android:text="اطلب"
            android:textColor="#FFF"
            android:onClick="@{() -> viewModel.onOrderService()}"/>

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/cart"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layoutDirection="ltr"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/cart_price"
                tools:text="120 ريال"
                android:gravity="left"

                android:textColor="@color/white"
                android:fontFamily="@font/cairo"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="اطلبي كوافيرة"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/cairo"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count"
                tools:text="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:background="@drawable/white_rounded_transp"
                android:textColor="@color/white"
                android:fontFamily="@font/cairo"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>